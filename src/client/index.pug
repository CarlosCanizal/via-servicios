doctype html
html(data-ng-app="app", data-ng-controller="Shell as shell")
  head
    base(href="/")
    title
      |Via Servicios
    meta(name="viewport", content="width=device-width,initial-scale=1")
    link(rel="shortcut icon" type="image/png" href="common/images/favicon.png")
    meta(charset="utf-8")
    //build:css
    link(rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="bower_components/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="bower_components/angular-ui-router-anim-in-out/css/anim-in-out.css")
    link(rel="stylesheet", href="common/styles/fonts.css")
    link(rel="stylesheet", href="common/styles/main.css")
    link(rel="stylesheet", href="common/styles/media-query.css")
    //endbuild

  body(data-ng-class="{'gradient':shell.menu == 'privacy' || shell.menu == 'faq' }")
    #main
      //- #arrow
        i.fa.fa-arrow-down(data-ng-show="shell.menu != 'contact'")
        i.fa.fa-arrow-up(data-ng-show="shell.menu == 'contact'")
      #header(data-ng-class="{'hide-it':shell.menu == 'privacy' || shell.menu == 'faq' }")
        #logo
          a(ui-sref="home")
            img(data-ng-src="common/images/logo.png")
        #menu-mobile
          nav
            a(ui-sref="home", data-ng-class="{'active':shell.menu =='home'}")
              |Inicio
          nav
            a(ui-sref="company",data-ng-class="{'active':shell.menu =='company'}")
              |Empresa
          nav
            a(ui-sref="geolocation",data-ng-class="{'active':shell.menu =='geolocation'}")
              |Puntos Via
          nav
            a(ui-sref="services",data-ng-class="{'active':shell.menu =='services'}")
              |Servicios
          nav
            a(ui-sref="distributor",data-ng-class="{'active':shell.menu =='distributor'}")
              |¿Cómo ser distribuidor?
          nav
            a(ui-sref="contact",data-ng-class="{'active':shell.menu =='contact'}")
              |Contacto
        #menu.clearfix
          nav
            a(ui-sref="contact",data-ng-class="{'active':shell.menu =='contact'}")
              |Contacto
          nav
            a(ui-sref="distributor",data-ng-class="{'active':shell.menu =='distributor'}")
              |¿Cómo ser distribuidor?
          nav
            a(ui-sref="geolocation",data-ng-class="{'active':shell.menu =='geolocation'}")
              |Puntos Via
          nav
            a(ui-sref="services",data-ng-class="{'active':shell.menu =='services'}")
              |Servicios
          nav
            a(ui-sref="company",data-ng-class="{'active':shell.menu =='company'}")
              |Empresa
          nav
            a(ui-sref="home", data-ng-class="{'active':shell.menu =='home'}")
              |Inicio
      ui-view.height-100.anim-in-out.anim-fade(data-anim-speed="500")

    // clear:js
    script(src="bower_components/angular/angular.js")
    script(src="bower_components/angular-ui-router/release/angular-ui-router.js")
    script(src="bower_components/angular-animate/angular-animate.min.js")
    script(src="bower_components/jquery/dist/jquery.min.js")
    script(src="bower_components/angular-ui-router-anim-in-out/anim-in-out.js")
    script(src="bower_components/lodash/dist/lodash.min.js")
    script(src="bower_components/restangular/dist/restangular.min.js")
    script(src="bower_components/ngmap/build/scripts/ng-map.min.js")
    script(src="bower_components/ngGeolocation/ngGeolocation.js")
    script(src="http://maps.google.com/maps/api/js")


    
    //Modules
    script(src="app/app.module.js")
    script(src="app/initialize.js")
    script(src="app/core/core.module.js")
    script(src="app/core/config.js")

    //Factories
    script(src="app/core/factories/parse.factory.js")
    script(src="common/keys/production.keys.js")


    //controllers
    script(src="app/shell/shell.controller.js")
    script(src="app/home/home.controller.js")
    script(src="app/services/services.controller.js")
    script(src="app/distributor/distributor.controller.js")
    script(src="app/contact/contact.controller.js")
    script(src="app/geolocation/geolocation.controller.js")

    // endinject


